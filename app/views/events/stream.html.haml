.row
  .columns.text-right
    = "Session Code: #{@event.session_code}"
.row
  .medium-2.columns
    = link_to "<< Back", @event, class: 'button'
    .row
      .columns
        .range-slider.vertical-range{"data-options" => "vertical: true;", "data-slider" => ""}
          %span.range-slider-handle{:role => "slider", :tabindex => "0"}
          %span.range-slider-active-segment
          %input{:type => "hidden"}/
  .medium-7.columns#presenter
    %img{ src: 'https://placeimg.com/1200/1600/people' }
  .medium-3.columns
    .row
      .columns
        %label Archive
        %input#on{:name => "on", :type => "radio", :value => "on"}/
        %label{:for => "on"} On
        %input#off{:name => "off", :type => "radio", :value => "off"}/
        %label{:for => "off"} Off
    .row
      .columns
        = link_to "Full Screen", "#", class: 'button'
    .row
      .columns
        = link_to "Capture", "#", class: 'button'
    .row
      .columns
        %ul.small-block-grid-1
          - 3.times do
            %li
              %img{ src: 'https://placeimg.com/640/480/arch' }
.row
  .columns
    %ul#bottom_streams.small-block-grid-6
      - 6.times do
        %li
          %img{ src: 'https://placeimg.com/640/480/arch' }
          .progress.radius
            %span.meter{style: "width: #{[10, 20, 30, 40, 60, 70].sample}%"}
